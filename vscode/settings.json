{
    "editor.fontSize": 14,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "editor.tokenColorCustomizations": {
        "comments": "#888888",
        "types": "#fbf7c2",
        "numbers": "#4fc08d",
        // "strings": "#4fc08d"
    },
    "git.autofetch": true,
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "gitlens.gitCommands.closeOnFocusOut": true,
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.fontSize": 14,
    "workbench.tree.indent": 14,
    "workbench.editor.enablePreview": false,
    "workbench.colorTheme": "Zeus-Sublime-Text",
    "workbench.tree.renderIndentGuides": "always",
    "workbench.colorCustomizations": {
        "editorWhitespace.foreground": "#5f5f5f",
        "editorIndentGuide.activeBackground": "#5f5f5f",
        "editorIndentGuide.background": "#5f5f5f",
        "editor.selectionBackground": "#4fc08d"
    },
    "files.eol": "\n",
    "editor.tabSize": 2,
    "diffEditor.ignoreTrimWhitespace": false,
    "solargraph.definitions": true,
    "solargraph.diagnostics": true,
    "emmet.includeLanguages": {
        "erb": "html"
    },
    "ruby.lint": {
        "reek": true,
        "rubocop": true,
        "ruby": true, //Runs ruby -wc
        "fasterer": true,
        "debride": true,
        "ruby-lint": true
    },
    "ruby.intellisense": "rubyLocate",
    "ruby.codeCompletion": "rcodetools",
    "ruby.format": "rubocop",
    "ruby.useLanguageServer": true,
    "ruby.locate": {
        "exclude": "{**/@(test|spec|tmp|.*),**/@(test|spec|tmp|.*)/**,**/*_spec.rb}",
        "include": "**/*.rb"
    },
    "workbench.startupEditor": "newUntitledFile",
    "languageStylus.useSeparator": false,
    "html.format.wrapAttributes": "force-aligned",
    "prettier.printWidth": 3000,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "cSpell.userWords": [
        "ALGOLIA",
        "Vercel",
        "algoliasearch",
        "cloudinary",
        "googletagmanager",
        "nuxt"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules/**": true
    },
    "search.exclude": {
        "**/node_modules/**": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.rvm/**":true,
        "**/node_modules/**": true,
        "**/Library/**":true
    },
    "extensions.ignoreRecommendations": false,
    "importCost.smallPackageSize": 10,
    "importCost.javascriptExtensions": [
        "\\.jsx?$",
        "\\.vue?$"
    ],
    "importCost.typescriptExtensions": [
        "\\.tsx?$",
        "\\.vue?$"
    ],
}
